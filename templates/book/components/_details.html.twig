<div>
    <h1>Titre : {{ book.title }}</h1>
    <a href="{{ path('app_book_show', { id: book.id }) }}">View</a>

    <h4>Author :
        {% for author in book.authors %}
            {{ author.firstName }} {{ author.lastName }}{{ not loop.last ? ',' }}
        {% endfor %}
    </h4>

    <h3>ISBN : {{ book.isbn }}</h3>
    <h3>ISBN 13 : {{ book.isbn-13 }}</h3>
</div>