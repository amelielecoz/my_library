{% extends 'base.html.twig' %}

{% block title %}Book list{% endblock %}

{% block body %}
    <h2 class="mb-5">
        Give your feedback!
    </h2>

    {% for row in books|batch(4) %}
        <div class="row">
            {% for book in row %}
                <div class="col-12 col-md-6 col-lg-3 mb-4">
                    <div class="card border shadow lift">
                        <div class="card-body">
                            <div class="card-title">
                                <h4 class="font-weight-light">
                                    {{ book.title }}
                                </h4>

                            </div>
                            {% if book.imageUrl %}
                                <img class="card-img-top" src="{{ book.imageUrl }}" size="50"/>
                            {% endif %}

                            <a href="{{ path('app_book_show', { slug: book.slug }) }}"
                               class="stretched-link"></a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endfor %}
{% endblock %}
